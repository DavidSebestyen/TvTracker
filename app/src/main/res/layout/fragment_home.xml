<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/most_popular_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Most Popular"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/most_popular_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/most_popular_title"
        android:layout_marginTop="-8dp" />

    <TextView
        android:id="@+id/top_rated_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Top Rated"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/most_popular_recycler_view"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_rated_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_rated_title"
        android:layout_marginTop="-8dp" />



</android.support.constraint.ConstraintLayout>